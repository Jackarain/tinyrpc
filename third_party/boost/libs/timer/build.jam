require-b2 5.2 ;

constant boost_dependencies :
    /boost/config//boost_config
    ;

project /boost/timer ;

explicit
    [ alias boost_timer : build//boost_timer ]
    [ alias all : boost_timer build test ]
    ;

call-if : boost-library timer
    : install boost_timer
    ;
